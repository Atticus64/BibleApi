{
	"tasks": {
		"dev": "deno run --unstable-kv --allow-env --allow-read --allow-net --watch src/main.ts",
		"start": "deno run --unstable-kv --allow-env --allow-read --allow-net src/main.ts",
		"test": "deno test --unstable-kv -A"
	},
	"importMap": "./import_map.json",
	"fmt": {
		"useTabs": true,
		"semiColons": true,
		"include": [
			"src/"
		],
		"exclude": [
			"src/testdata/",
			"data/fixtures/**/*.ts"
		]
	}
}
